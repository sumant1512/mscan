{
  "name": "mscan-server",
  "version": "1.0.0",
  "description": "TMS Backend Server - Node.js/Express/PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:db": "node test-db-health.js",
    "db": "node database/db-manager.js",
    "db:setup": "node database/db-manager.js setup",
    "db:clean-tenant": "node database/db-manager.js clean-tenant",
    "db:clean-all": "node database/db-manager.js clean-all",
    "db:drop": "node database/db-manager.js drop",
    "db:reset": "node database/db-manager.js drop --yes && node database/db-manager.js setup",
    "db:migrate": "node database/apply-migration-013.js && node database/apply-migration-014.js && node database/apply-migration-015.js && node database/apply-migration-016.js && node database/apply-migration-017.js",
    "db:migrate:013": "node database/apply-migration-013.js",
    "db:migrate:014": "node database/apply-migration-014.js",
    "db:migrate:015": "node database/apply-migration-015.js",
    "db:migrate:016": "node database/apply-migration-016.js",
    "db:migrate:017": "node database/apply-migration-017.js",
    "db:check": "node check-template-column.js",
    "db:check-schema": "node check-template-schema.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "keywords": [
    "tms",
    "transport",
    "logistics",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
