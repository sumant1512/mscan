{
  "name": "mscan-server",
  "version": "1.0.0",
  "description": "TMS Backend Server - Node.js/Express/PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node database/run-full-setup.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:cleanup": "node database/cleanup-all-tenant-data.js",
    "db:cleanup:force": "node database/cleanup-all-tenant-data.js --yes",
    "db:drop": "node database/drop-all-tables.js",
    "db:reset": "npm run db:drop && npm run migrate:full"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "keywords": [
    "tms",
    "transport",
    "logistics",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
